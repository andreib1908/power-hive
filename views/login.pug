extends base

block styles
  link(rel='stylesheet' href='/css/home.css')
  link(rel='stylesheet' href='/css/login.css')

block content
  main.main
    .container
      .orange-line-high

      .top-bar
        .logo
          img(src='/img/PH_logo.png')
        div
        .nav
          a.active(href='/login') Log In
          a(href='/signup') Sign Up
          a(href='/home') Home
        .auth

      .content-login
        .login-container
          .login-title Log In

          // âœ… Added form with .form class
          form.login-form.form(method='POST')
            label(for='email') Email
            input#email(type='email', name='email', placeholder='Email', required)

            label(for='password') Password
            input#password(type='password', name='password', placeholder='Password', required)

            .login-button
              button(type='submit') Log In

          .forgot-button
            button
              a(href='/forgot') Forgot Password?

      .bottom-bar
        .social
          a(href='')
            img(src='/img/X.png')
          a(href='')
            img(src='/img/insta.png')
          a(href='')
            img(src='/img/linkedin.png')
        .terms
          a(href='/terms') Terms and Conditions
        div

      .orange-line-low
